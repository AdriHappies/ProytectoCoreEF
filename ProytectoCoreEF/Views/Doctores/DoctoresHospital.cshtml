@model List<Doctor>


<a asp-controller="Hospitales"
   asp-action="Index">
    Volver al listado de Hospitales
</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Especialidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Doctor d in Model)
        {
            <tr>
                <td>@d.Apellido</td>
                <td>@d.Especialidad</td>
                <td>
                    <a asp-controller="Doctores"
                       asp-action="DetailsDoctor"
                       asp-route-iddoctor="@d.IdDoctor">
                        Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
