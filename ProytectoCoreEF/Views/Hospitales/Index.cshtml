@model List<Hospital>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital h in Model)
        {
        <tr>
            <td>@h.Nombre</td>
            <td>@h.Direccion</td>
            <td>@h.Telefono</td>
            <td>
                <a asp-controller="Hospitales"
                   asp-action="Details"
                   asp-route-idhospital="@h.IdHospital">
                    Detalles
                </a>
            </td>
            <td>
                <a asp-controller="Doctores"
                   asp-action="DoctoresHospital"
                   asp-route-idhospital="@h.IdHospital">
                    Doctores
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>